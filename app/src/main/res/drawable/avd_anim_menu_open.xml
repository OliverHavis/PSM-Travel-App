<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:name="vector"
            android:width="25dp"
            android:height="25dp"
            android:viewportWidth="25"
            android:viewportHeight="25">
            <path
                android:name="path"
                android:pathData="M 0 1 L 25 1"
                android:fillColor="#ffffff"
                android:strokeColor="#ffffff"
                android:strokeAlpha="0"
                android:strokeWidth="2.5"/>
            <path
                android:name="path_1"
                android:pathData="M 1 1 L 24 24"
                android:fillColor="#ffffff"
                android:strokeColor="#ffffff"
                android:strokeWidth="2.5"/>
            <path
                android:name="path_2"
                android:pathData="M 1 24 L 24 1"
                android:fillColor="#ffffff"
                android:strokeColor="#ffffff"
                android:strokeWidth="2.5"/>
            <path
                android:name="path_3"
                android:pathData="M 0 24 L 25 24"
                android:fillColor="#ffffff"
                android:strokeColor="#ffffff"
                android:strokeAlpha="0"
                android:strokeWidth="2.5"/>
        </vector>
    </aapt:attr>
    <target android:name="path">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="strokeAlpha"
                android:startOffset="350"
                android:duration="300"
                android:valueFrom="0"
                android:valueTo="1"
                android:valueType="floatType"
                android:interpolator="@android:interpolator/fast_out_slow_in"/>
        </aapt:attr>
    </target>
    <target android:name="path_3">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="strokeAlpha"
                android:startOffset="350"
                android:duration="300"
                android:valueFrom="0"
                android:valueTo="1"
                android:valueType="floatType"
                android:interpolator="@android:interpolator/fast_out_slow_in"/>
        </aapt:attr>
    </target>
    <target android:name="path_1">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="pathData"
                android:startOffset="100"
                android:duration="400"
                android:valueFrom="M 1 1 L 24 24"
                android:valueTo="M 0 12.5 L 25 12.5"
                android:valueType="pathType"
                android:interpolator="@android:interpolator/fast_out_slow_in"/>
        </aapt:attr>
    </target>
    <target android:name="path_2">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="pathData"
                android:startOffset="100"
                android:duration="400"
                android:valueFrom="M 1 24 L 24 1"
                android:valueTo="M 0 12.5 L 25 12.5"
                android:valueType="pathType"
                android:interpolator="@android:interpolator/fast_out_slow_in"/>
        </aapt:attr>
    </target>
</animated-vector>
