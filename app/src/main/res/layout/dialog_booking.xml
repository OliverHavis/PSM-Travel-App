<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ready for your next holiday?"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/dark_blue"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/peak_season_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:text="Peak Season Surcharge: 10%"
        android:textColor="#000000"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/total_costs_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="end"
        android:text="Total Cost: $0.00"
        android:textColor="#000000"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/excursion_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Available Excursions:"
        android:textColor="@color/dark_blue"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"/>

    <CheckBox
        android:id="@+id/excursion1_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:paddingHorizontal="16dp"
        android:layout_marginTop="8dp"/>

    <CheckBox
        android:id="@+id/excursion2_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:paddingHorizontal="16dp"
        android:layout_marginTop="8dp"/>

    <CheckBox
        android:id="@+id/excursion3_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:paddingHorizontal="16dp"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buy_now_button"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="Buy Now"
            android:background="@drawable/rounded_button_price"
            android:textColor="@color/white"
            android:padding="16dp"
            android:layout_marginRight="5dp"/>

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/dark_blue"
            style="?android:attr/buttonBarButtonStyle"
            android:padding="16dp"/>

    </LinearLayout>

</LinearLayout>
